generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model NetbankingAccount {
  userId                  Int           @id @unique
  password                String
  bankName                BankName
  transactions            Transaction[]
  bankAccount             BankAccount  @relation(fields: [bankAccountId], references: [accountNumber])
  bankAccountId           Int @unique
}

model BankAccount {
  accountNumber  Int               @id @unique
  balance        Int
  userName       String
  netbankAccount NetbankingAccount?
}

model Transaction {
  txId                    Int               @id @default(autoincrement())
  token                   String            @unique
  status                  PaymentStatus
  amount                  Int
  date                    DateTime
  netbankingAccount       NetbankingAccount @relation(fields: [netbankingUserId], references: [userId])
  netbankingUserId        Int
  paymentApp              PaymentApp?
}

model RegisteredApp {
  paymentApp PaymentApp
  secretKey  String
  bankName   BankName
  webhookUrl String

  @@id([paymentApp, bankName])
}

enum PaymentStatus {
  INITIATED
  PROCESSING
  SUCCESS
  FAILED
}

enum BankName {
  HDFC
  KOTAK
}

enum PaymentApp {
  PAYMNT 
  PAYTM 
  PHONEPE
  QUCKPAY
  MOBIQWIK
  ZEBPAY
  XYZPAY
}